    {
      "name": "00 - Auth",
      "item": [
        {
          "name": "Get Dev JWT (order-notification)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": "{{authBaseUrl}}/dev/token",
            "description": "Obtiene un JWT de desarrollo desde order-notification (GET /dev/token?userId=...). Guarda el token en la variable {{jwt}}.",
            "auth": {
              "type": "noauth"
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"userId\":\"{{devUserId}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"200 OK\", function () {",
                  "  pm.expect(pm.response.code).to.equal(200);",
                  "});",
                  "",
                  "let token = null;",
                  "try {",
                  "  const data = pm.response.json();",
                  "  token = data.token || data.access_token || data.jwt || data.id_token || data;",
                  "} catch (e) {",
                  "  token = pm.response.text();",
                  "}",
                  "",
                  "if (token && typeof token === \"object\") {",
                  "  token = token.token || token.access_token || token.jwt || token.value || JSON.stringify(token);",
                  "}",
                  "",
                  "token = (token || \"\").toString().trim().replace(/^\"+|\"+$/g, \"\");",
                  "pm.collectionVariables.set(\"jwt\", token);",
                  "pm.environment.set(\"jwt\", token);",
                  "",
                  "pm.test(\"JWT guardado en {{jwt}}\", function () {",
                  "  pm.expect(pm.collectionVariables.get(\"jwt\")).to.be.ok;",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
